{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components": ["./components"],
      "@components/*": ["./components/*"],

      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],

      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],

      "@elements": ["./elements"],
      "@elements/*": ["./elements/*"],

      "@modules": ["./modules"],
      "@modules/*": ["./modules/*"],

      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],

      "@services": ["./services"],
      "@services/*": ["./services/*"],

      "@state": ["./state"],
      "@state/*": ["./state/*"],

      "@theme": ["./theme"],
      "@theme/*": ["./theme/*"],

      "@mock": ["./mock"],
      "@mock/*": ["./mock/*"],

      "@router": ["./router"],
      "@router/*": ["./router/*"],

      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],

      "@app": ["./app"],
      "@app/*": ["./app/*"],
      
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],

      "@type": ["./type"],
      "@type/*": ["./type/*"],

      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"],

      "@locales": ["./locales"],
      "@locales/*": ["./locales/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "useDefineForClassFields": true,
    "noEmit": true
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "**/*.config.js"],
  "homepage": "."
}
